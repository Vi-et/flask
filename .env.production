# Production Environment Configuration
# ==================================

# Application Environment
FLASK_ENV=production
FLASK_DEBUG=False

# Application Settings
APP_NAME=Flask Modular App
API_VERSION=1.0.0
SECRET_KEY=super-secure-secret-key-for-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/production_db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Server Configuration
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000

# Production Settings
SQLALCHEMY_ECHO=False
WTF_CSRF_ENABLED=True

# Pagination
POSTS_PER_PAGE=10
USERS_PER_PAGE=20

# Upload Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/var/www/uploads

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=production@yourapp.com
MAIL_PASSWORD=production-email-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=WARNING
